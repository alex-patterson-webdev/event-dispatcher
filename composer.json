{
  "name": "alex-patterson-webdev/event-dispatcher",
  "description": "Simple implementation of the PSR-14 event dispatcher",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "Alex Patterson",
      "email": "alex.patterson.webdev@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.3 || >=8.0",
    "psr/event-dispatcher": "^1",
    "alex-patterson-webdev/factory": "dev-feature/2.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.1",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "Arp\\EventDispatcher\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArpTest\\EventDispatcher\\": "test/phpunit"
    }
  },
  "scripts": {
    "test": "php vendor/bin/phpunit --coverage-clover=coverage.xml"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
